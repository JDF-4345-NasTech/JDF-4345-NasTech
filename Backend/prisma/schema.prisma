generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id Int @id @default(autoincrement())
  name String
  description String
  events Event[]
}

model Event {
  id Int @id @default(autoincrement())
  name String
  date String
  location String
  description String
  organization Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
  rsvps Rsvp[]
}

model Rsvp {
  id Int @id @default(autoincrement())
  fname String
  lname String
  email String
  status Int
  event Event @relation(fields: [eventId], references: [id])
  eventId Int
}